{
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": [
        "go.mod",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "filetypes": [
        "go"
      ]
    }
  },
  "suggest.noselect": false,
  "go.disable": {
    "workspaceFolders": true
  },
  "explorer.file.showHiddenFiles": true
}

